<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/graybackground"
    android:layout_height="match_parent"
    tools:context=".TeacherActivity">
    <View
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/teacher_image_back"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/teacher_text_title"
            android:textSize="19dp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="填写班级信息"
            android:paddingRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
   <LinearLayout
       android:background="#ffffff"
       android:padding="10dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:text="学校"
           android:textSize="16dp"
           android:layout_marginTop="10dp"
           android:textColor="#000000"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
       <TextView
           android:id="@+id/teacher_text_school"
           android:textSize="15dp"
           android:padding="5dp"
           android:background="@drawable/textview_background"
           android:layout_marginTop="7dp"
           android:textColor="#000000"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
       <TextView
           android:text="年级"
           android:textSize="16dp"
           android:layout_marginTop="10dp"
           android:textColor="#000000"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
       <ListView
           android:id="@+id/teacher_listview"
           android:layout_width="match_parent"
           android:divider="@color/transparent"
           android:dividerHeight="5dp"
           android:layout_height="wrap_content">

       </ListView>
       <Button
           android:id="@+id/teacher_button_ceate"
           android:textColor="#000000"
           android:background="@drawable/buttonpractice_background"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:textSize="15dp"
           android:text="创建班级"
           android:layout_marginTop="30dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
   </LinearLayout>
</LinearLayout>