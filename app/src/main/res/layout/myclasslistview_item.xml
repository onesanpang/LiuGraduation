<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_background"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/myclasslistview_text_grade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="一年级"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/myclasslistview_text_mnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人数：0"
            android:textSize="13dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/myclasslistview_text_cnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="班级号：4028988"
        android:textColor="#000000"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/myclasslistview_text_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="学校：莲塘一小"
        android:textColor="#000000"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/myclasslistview_linear_delect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/delect" />

            <TextView
                android:id="@+id/myclasslistView_item_dissolveclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="解散班级"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>