<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/graybackground"
    tools:context=".ErrorBookActivity">

    <View
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/errorbook_image_back"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/teacher_text_title"
            android:textSize="19dp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="错题本"
            android:paddingRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/errorbook_text_check"
                android:text="检查错题"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/errorbook_view_check"
                android:layout_marginTop="10dp"
                android:background="#F7D981"
                android:layout_width="80dp"
                android:layout_height="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/errorbook_text_parcitice"
                android:text="练习错题"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/errorbook_view_parcitice"
                android:layout_marginTop="10dp"
                android:background="#F7D981"
                android:layout_width="80dp"
                android:layout_height="3dp"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/errorbook_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>


</LinearLayout>