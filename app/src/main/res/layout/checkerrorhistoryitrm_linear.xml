<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/checkerrorhistoryitemlinear_text_isCorrect"
        android:text="答案：正确"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/checkerrorhistoryitemlinear_text_sourceStr"
        android:textSize="13dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:text="原始答案：正确"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/checkerrorhistoryitemlinear_text_targetStr"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:text="正确答案：正确"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
</LinearLayout>