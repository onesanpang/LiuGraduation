<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/graybackground"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/classfragmentlistview_text_time"
        android:gravity="center"
        android:textSize="11dp"
        android:text="4月28日周二"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/classfragmentlistview_back"
        android:layout_height="wrap_content">
        <View
            android:background="#4CAF50"
            android:layout_width="5dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/classfragmentlistview_text_name"
                android:text="一年级"
                android:textColor="#000000"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/classfragmentlistview_text_context"
                android:text="聊了几句"
                android:textColor="#2C2C2C"
                android:textSize="13dp"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/classfragmentlistview_image"
                android:layout_width="wrap_content"
                android:layout_height="200dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>